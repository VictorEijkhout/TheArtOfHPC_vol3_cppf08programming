  {
    auto findthe = regex("the");
    auto found = regex_search
      ( sentence,findthe );
    assert( found==true );
    cout << "Found <<the>>" << '\n';
  }
  {
    smatch match;
    auto findthx = regex("o[^o]+o");
    auto found = regex_search
      ( sentence, match ,findthx );
    assert( found==true );
    cout << "Found <<o[^o]+o>>"
	 << " at " << match.position(0)
	 << " as <<" << match.str(0) << ">>"
	 << " preceeded by <<" << match.prefix() << ">>"
	 << '\n';
  }
