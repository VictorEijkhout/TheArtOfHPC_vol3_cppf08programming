// /ijright.cpp
  for (int sum=1; sum<20; ++sum) {
    bool found{false};
    for (int i=0; i<sum; ++i) {
      int j = sum-i;
      if (i*j>threshold) {
        cout << "The pair " << i << "," << j
             << " multiplies to " << i*j << '\n';
        found = true;
        break;
      }
    }
    if (found) break;
  }
