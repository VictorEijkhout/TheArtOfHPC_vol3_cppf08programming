    vector< std::future<string> > futures;
    for ( int ithread=0; ithread<NTHREADS; ++ithread ) {
      futures.push_back
        ( std::async
	  ( [ithread] () ->string {
            stringstream ss;
            ss << "Hello world " << ithread;
            return ss.str();
          } ) );
    }
    for ( int ithread=0; ithread<NTHREADS; ++ithread ) {
      cout << futures.at(ithread).get() << '\n';
    }
